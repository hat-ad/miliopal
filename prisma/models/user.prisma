enum Role {
  USER
  ADMIN
  SUPERADMIN
}

model User {
  id         String     @id @default(uuid())
  name       String?
  phone      String?
  email      String     @unique
  password    String?
  role        Role     @default(USER)
  token       String?
  isActive  Boolean    @default(false)
  isDeleted  Boolean    @default(false)
  createdAt  DateTime   @default(now())
  updatedAt  DateTime   @updatedAt
  purchases  Purchase[]
}
